<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:navigationIcon="@drawable/ic_back"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imagePoster"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_250"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/ic_play"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/imagePoster"
                    app:layout_constraintEnd_toEndOf="@+id/imagePoster"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeableImageView"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_200"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/imagePoster"
                    app:layout_constraintTop_toBottomOf="@+id/imagePoster"
                    app:shapeAppearanceOverlay="@style/RoundedCorner"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="@dimen/dp_1"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="8dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTitleMovie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp_8"
                    app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagePoster" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textLengthMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108 minutes"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_constraintStart_toStartOf="@+id/textTitleMovie"
                    app:layout_constraintTop_toBottomOf="@+id/textTitleMovie" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/ic_star"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/textLengthMovie"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textLengthMovie"
                    app:layout_constraintVertical_bias="0.0" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textLengthMovie"
                    app:layout_constraintTop_toBottomOf="@+id/textLengthMovie"
                    tools:itemCount="10"
                    tools:listitem="@layout/item_genre" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textOverview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_marginVertical="@dimen/dp_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textMovieOf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textOverview" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textActor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:text="@string/detail_actor"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textMovieOf" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerActor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textActor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textRecommend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/detail_recommend"
                    android:layout_marginTop="@dimen/dp_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerActor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecommend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textRecommend" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>